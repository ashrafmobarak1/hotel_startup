                </select>

            </div>
            <div class="col-lg-3">
                <label for="selectRoomTypeId" class="col-form-label"> Room Type</label>
                <select type="select" name="roomtype" id="selectRoomTypeId" class="form-control" asp-for="roomTypeId" asp-items="ViewBag.RoomType">
                    @*<option value="1">Room</option>
                    <option value="2">Suit</option>*@

                </select>

            </div>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>