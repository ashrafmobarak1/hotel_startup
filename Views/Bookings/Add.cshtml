        <div class="row">
            <div class="col-lg-3">
                <label for="txtName" class="col-form-label">name</label>
                <input type="text" name="name" value="" id="txtName" class="form-control" asp-for="Name" />

            </div>
            <div class="col-lg-3">
                <label for="txtMobile" class="col-form-label">mobile</label>
                <input type="number" name="mobile" value="" id="txtMobile" class="form-control" asp-for="mobile" />

            </div>
            <div class="col-lg-3">
                <label for="txtstartDate" class="col-form-label">start date</label>
                <input type="date" name="startdate" value="" id="txtstartDate" class="form-control" asp-for="startDate" />

            </div>
            <div class="col-lg-3">
                <label for="txtendDate" class="col-form-label">end date</label>
                <input type="date" name="enddate" value="" id="txtendDate" class="form-control" asp-for="endDate" />

            </div>
            <div class="col-lg-3">
                <label for="txtPersonNo" class="col-form-label">Person No</label>
                <input type="number" name="personno" value="" id="txtPersonNo" class="form-control" asp-for="personNo" />

            </div>
